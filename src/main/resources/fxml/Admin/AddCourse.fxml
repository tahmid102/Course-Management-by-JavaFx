<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.Controllers.AddCourseController">
    <children>
        <Label fx:id="courseFormTitle" text="Add New Course" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>

        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>

            <Label text="Course ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="courseIdField" promptText="Enter course ID (e.g., CSE101)" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Course Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="courseNameField" promptText="Enter course name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Credit Hours:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="courseCreditField" promptText="Enter credit hours (1-10)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                <GridPane.margin>
                    <Insets top="5.0" />
                </GridPane.margin>
            </Label>
            <TextArea fx:id="courseDescriptionArea" prefRowCount="4" promptText="Enter course description (optional)" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </GridPane>

        <Label fx:id="statusLabel" textAlignment="CENTER" wrapText="true">
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
            <font>
                <Font name="System Bold" size="11.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="addCourseButton" defaultButton="true" prefWidth="100.0" text="Add Course">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="cancelButton" cancelButton="true" prefWidth="100.0" text="Cancel">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <minWidth>400.0</minWidth>
    <prefWidth>450.0</prefWidth>
        </VBox>