<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.Controllers.AdminDashboardController">
    <top>
        <VBox prefHeight="100.0" style="-fx-background-color: #2c3e50; -fx-padding: 25;">
            <children>
                <Label text="Admin Dashboard" textFill="WHITE">
                    <font>
                        <Font name="Helvetica" size="28.0" />
                    </font>
                </Label>
                <Label text="Course Management System - Administrator Panel" textFill="#ecf0f1">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="30.0" style="-fx-background-color: #34495e; -fx-padding: 10; -fx-background-radius: 5;">
                    <children>
                        <Label fx:id="ADstudentCountLabel" text="Students: 0" textFill="#3498db">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="ADteacherCountLabel" text="Teachers: 0" textFill="#e74c3c">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="ADcourseCountLabel" text="Courses: 0" textFill="#f39c12">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>

            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="ADaddStudentButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Add Students" />
                        <Button fx:id="ADaddTeacherButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Add Teachers" />
                        <Button fx:id="ADaddCourseButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Add Courses" />
                        <Button fx:id="ADrefreshButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Refresh" />
                        <Button fx:id="ADsignOutButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Sign Out" />
                    </children>
                </HBox>

                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                            <children>
                                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                                    <children>

                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Admitted Students" textFill="#2c3e50">
                                                    <font>
                                                        <Font name="System Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                                <TextField fx:id="ADstudentSearchField" prefWidth="150.0" promptText="Search student..." />
                                    <Button fx:id="ADremoveStudentButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Remove Student" />
                                            </children>
                                        </HBox>

                                        <TableView fx:id="ADstudentTable" prefHeight="280.0" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="ADstudentNameColumn" prefWidth="150.0" text="Name" />
                                                <TableColumn fx:id="ADstudentIdColumn" prefWidth="150.0" text="Student ID" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>

                                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Assigned Teachers" textFill="#2c3e50">
                                                    <font>
                                                        <Font name="System Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                                <TextField fx:id="ADteacherSearchField" prefWidth="150.0" promptText="Search teacher..." />
                                    <Button fx:id="ADassignTeacherButton" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Assign Course" />
                                            </children>
                                        </HBox>

                                        <TableView fx:id="ADteacherTable" prefHeight="280.0" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="ADteacherNameColumn" prefWidth="150.0" text="Name" />
                                                <TableColumn fx:id="ADteacherIdColumn" prefWidth="150.0" text="Teacher ID" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <VBox maxWidth="400.0" minWidth="350.0" prefWidth="400.0" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Available Courses" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="ADcourseSearchField" prefWidth="150.0" promptText="Search course..." />
                                    </children>
                                </HBox>

                                <TableView fx:id="ADcourseTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="ADcourseIDColumn" prefWidth="100.0" text="Course ID" />
                                        <TableColumn fx:id="ADcourseNameColumn" prefWidth="200.0" text="Course Name" />
                                        <TableColumn fx:id="ADcourseCreditColumn" prefWidth="100.0" text="Credit" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
