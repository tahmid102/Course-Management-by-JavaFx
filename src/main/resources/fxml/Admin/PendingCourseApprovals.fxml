<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" spacing="25.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.Controllers.PendingCourseApprovalController">
    <children>
        <Label text="Approve Pending Enrollments" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="25.0" right="25.0" top="20.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="pendingStudentTable" prefHeight="280.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Student Name" />
                <TableColumn fx:id="idColumn" prefWidth="200.0" text="Student ID" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets left="25.0" right="25.0" />
            </VBox.margin>
        </TableView>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="approveSelectedButton" mnemonicParsing="false" onAction="#approveSelected" prefWidth="140.0" text="Approve Selected">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="approveAllButton" mnemonicParsing="false" onAction="#approveAll" prefWidth="120.0" text="Approve All">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="deleteSelectedButton" mnemonicParsing="false" onAction="#deleteSelected" prefWidth="140.0" text="Delete Selected">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="deleteAllButton" mnemonicParsing="false" onAction="#deleteAll" prefWidth="120.0" text="Delete All">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="30.0" left="25.0" right="25.0" top="15.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
