<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="900.0" spacing="25.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.Controllers.ViewTeacherCoursesController">
    <children>
        <Label fx:id="teacherNameLabel" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="25.0" right="25.0" top="20.0" />
            </VBox.margin>
        </Label>

        <HBox spacing="30.0" VBox.vgrow="ALWAYS">
            <children>
                <!-- Left VBox: Teacher Courses -->
                <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Assigned Courses" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="courseTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCourseID" prefWidth="120.0" text="Course ID" />
                                <TableColumn fx:id="colCourseName" prefWidth="220.0" text="Course Name" />
                                <TableColumn fx:id="colCredit" prefWidth="100.0" text="Credit Hours" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <!-- Right VBox: Enrolled Students -->
                <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Enrolled Students" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TableView fx:id="studentTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colStudentID" prefWidth="120.0" text="Student ID" />
                                <TableColumn fx:id="colStudentName" prefWidth="220.0" text="Student Name" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets left="25.0" right="25.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>