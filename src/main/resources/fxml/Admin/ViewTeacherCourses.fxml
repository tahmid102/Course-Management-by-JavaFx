<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.Controllers.ViewTeacherCoursesController">

    <!-- Left VBox: Teacher + Courses -->
    <VBox alignment="CENTER_LEFT" spacing="15">
        <Label fx:id="teacherNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TableView fx:id="courseTable" prefHeight="300.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colCourseID" prefWidth="100.0" text="Course ID" />
                <TableColumn fx:id="colCourseName" prefWidth="200.0" text="Course Name" />
                <TableColumn fx:id="colCredit" prefWidth="100" text="Credit" />
            </columns>
        </TableView>
    </VBox>

    <!-- Right VBox: Enrolled Students -->
    <VBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Enrolled Students" />
        <TableView fx:id="studentTable" prefHeight="300" prefWidth="300.0">
            <columns>
                <TableColumn fx:id="colStudentID" prefWidth="100.0" text="Student ID" />
                <TableColumn fx:id="colStudentName" prefWidth="200" text="Name" />
            </columns>
        </TableView>
    </VBox>

</HBox>
