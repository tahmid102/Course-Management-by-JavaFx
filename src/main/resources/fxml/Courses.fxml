<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="files.Controllers.CoursesController">

   <children>

      <!-- Top Header -->
      <HBox alignment="CENTER" layoutY="0.0" prefHeight="78.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="OTHER COURSES">
               <font>
                  <Font name="System Bold" size="29.0" />
               </font>
               <fill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop>
                           <color><Color red="0.257" green="0.674" blue="0.438" /></color>
                        </Stop>
                        <Stop offset="1.0">
                           <color><Color red="1.0" green="1.0" blue="1.0" /></color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </fill>
            </Text>
         </children>
      </HBox>

      <!-- Sidebar -->
      <VBox layoutX="0.0" layoutY="78.0" prefHeight="522.0" prefWidth="130.0" spacing="20.0"
            style="-fx-background-color: #34495e;" stylesheets="@../css/TeacxherDashboard.css">
         <children>
            <Button fx:id="logout" onAction="#onLogout" text="Logout"
                    prefWidth="110.0" style="-fx-background-color: #95a5a6; -fx-background-radius: 6;" />
            <Button fx:id="backButton" onAction="#onBack" text="Back"
                    prefWidth="110.0" style="-fx-background-color: #95a5a6; -fx-background-radius: 6;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>

      <!-- Search & Filter Controls -->
      <HBox layoutX="150.0" layoutY="90.0" spacing="10.0">
         <children>
            <ComboBox fx:id="filterBox" prefHeight="30.0" prefWidth="150.0"
                      promptText="Filter By Department" />
            <TextField fx:id="SearchBox" prefHeight="30.0" prefWidth="200.0"
                       promptText="Search courses..." />
         </children>
      </HBox>

      <!-- Course List Container -->
      <ScrollPane layoutX="150.0" layoutY="140.0" prefHeight="420.0" prefWidth="600.0" fitToWidth="true">
         <content>
            <VBox fx:id="allCourseVbox" spacing="10.0">
               <padding>
                  <Insets right="10.0" bottom="10.0" left="10.0"/>
               </padding>
            </VBox>
         </content>
      </ScrollPane>

   </children>
</AnchorPane>
