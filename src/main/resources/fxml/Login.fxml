        <children>
            <TextField fx:id="userIDField" layoutX="204.0" layoutY="152.0" prefHeight="22.0" prefWidth="159.0" promptText="userID" />
            <PasswordField fx:id="passwordField" layoutX="204.0" layoutY="200.0" prefHeight="26.0" prefWidth="159.0" promptText="Password" />
            <Button fx:id="submitButton" layoutX="148.0" layoutY="273.0" mnemonicParsing="false" onAction="#onSubmit" prefHeight="26.0" prefWidth="60.0" text="Submit" />
            <Label fx:id="welcomeLabel" layoutX="74.0" layoutY="34.0" prefHeight="48.0" prefWidth="418.0" text="COURSE MANAGEMENT SYSTEM" textAlignment="CENTER">
