<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="loginAnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="files.Controllers.LoginController">
    <children>
        <TextField fx:id="usernameField" layoutX="204.0" layoutY="152.0" prefHeight="22.0" prefWidth="159.0" promptText="userID" />
        <PasswordField fx:id="passwordField" layoutX="204.0" layoutY="200.0" prefHeight="26.0" prefWidth="159.0" promptText="Password" />
        <Button fx:id="submitButton" layoutX="148.0" layoutY="273.0" mnemonicParsing="false" onAction="#onSubmit" prefHeight="26.0" prefWidth="60.0" text="Submit" />
      <Label fx:id="welcomeLabel" layoutX="74.0" layoutY="34.0" prefHeight="48.0" prefWidth="418.0" text="COURSE MANAGEMENT SYSTEM" textAlignment="CENTER">
         <font>
            <Font name="Arial Black" size="23.0" />
         </font>
      </Label>
      <ComboBox fx:id="roleBox" layoutX="208.0" layoutY="98.0" prefWidth="150.0" promptText="Select Role" />
      <Label fx:id="errorLabel" layoutX="228.0" layoutY="298.0" prefHeight="48.0" prefWidth="110.0" textAlignment="CENTER" textFill="RED" wrapText="true" />
      <Button fx:id="cancelButton" layoutX="358.0" layoutY="274.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
      <Label layoutX="178.0" layoutY="359.0" text="Don't have an account?" />
      <Hyperlink fx:id="registerHyperlink" layoutX="316.0" layoutY="357.0" text="Register here" underline="true" />
    </children>
</AnchorPane>
